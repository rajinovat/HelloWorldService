<project name="IIB-CI-MAIN" basedir="..">
	<description>IIB Continuous Integration(main script)</description>
	<property name="version" value="${bar.version}" />


	<exec executable="mqsicreatebar">
		<arg value="-data" />
		<arg value="${basedir}" />
		<arg value="-b" />
		<arg value="${appname}/target/${appname}-${version}.bar" />
		<arg value="-a" />
		<arg value="${appname}" />
		<arg value="-trace" />
	</exec>

	<copydir src="." dest="/tmp/poms/${appname}"  includes="**/pom.xml" />

	<copydir src="." dest="/tmp/poms/${appname}"  includes="**/main_bootstrap.xml" />

	<copydir src="." dest="/tmp/poms/${appname}"  includes="**/build_main.xml" />

	<delete failonerror="true" verbose="true">
		<fileset dir="." includes="**/pom.xml" />
	</delete>


	<delete failonerror="true" verbose="true">
		<fileset dir="." includes="**/main_bootstrap.xml" />
	</delete>

	<delete failonerror="true" verbose="true">
		<fileset dir="." includes="**/build_main.xml" />
	</delete>

	<exec executable="mqsipackagebar">
		<arg value="-w" />
		<arg value="." />
		<arg value="-a" />
		<arg value="${appname}/target/${appname}-${version}.bar" />
		<arg value="-k" />
		<arg value="${appname}" />
	</exec>


	<copydir src="/tmp/poms/${appname}" dest="."  includes="**/pom.xml" />

	<copydir dest="." src="/tmp/poms/${appname}"  includes="**/main_bootstrap.xml" />

	<copydir dest="." src="/tmp/poms/${appname}"  includes="**/build_main.xml" />

	<!-- <delete dir="/tmp/poms/${appname}"/> -->



</project>
